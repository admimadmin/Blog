{% extends 'base.html.twig' %}

{% block title %}Usuario{% endblock %}

{% block body %}
<body class="text-center">
    <h4>Usuario</h4>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Clave</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ user.website }}</td>
            </tr>
            <tr>
                <th>Detalles</th>
                <td>{{ user.details }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">Ver listado</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">Editar</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
