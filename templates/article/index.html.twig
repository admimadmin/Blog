{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

<body class="text-center">
    <h1>Blogs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Nombre</th>
                <th>Contenido</th>
                <th>Descripcion</th>
                <th>Fecha</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.user }}</td>
                <td>{{ article.nombre }}</td>
                <td>Contenido</td>
                <td>{{ article.descripcion }}</td>
                <td>{{ article.fecha ? article.fecha|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">Mostrar</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Registros no encontrados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Crear nuevo</a>

    </body>
{% endblock %}
